  "dependencies": {
    "@saju/api": "workspace:*",
    "@saju/engine-saju": "workspace:*",
    "@saju/shared": "workspace:*",
    "@tailwindcss/postcss": "^4.2.1",
    "next": "15.5.12",
    "postcss": "^8.5.6",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwindcss": "^4.2.1"
  },
  "devDependencies": {
    "@prisma/client": "^6",
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "prisma": "^6",
    "typescript": "^5.6.3"
  }
}
